rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Posts collection - hamma o'qiy va yoza oladi (development uchun)
    match /posts/{postId} {
      allow read, write: if true;
    }
    
    // Boshqa collection'lar uchun default rules
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
